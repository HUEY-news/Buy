<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingTop="8dp"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow"
        app:layout_constraintBottom_toBottomOf="@id/product_name"
        app:layout_constraintEnd_toStartOf="@id/shopping_cart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/blue_400" />

    <ImageView
        android:id="@+id/shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_shopping_cart"
        app:layout_constraintBottom_toBottomOf="@id/product_name"
        app:layout_constraintStart_toEndOf="@id/arrow_left"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/blue_400" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/font_mister_brush"
        android:maxLines="1"
        android:text="Название продукта"
        android:textColor="@color/blue_400"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/button_delete"
        app:layout_constraintStart_toEndOf="@id/shopping_cart"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/font_mister_brush"
        android:maxLines="2"
        android:text="Описание продукта"
        android:textColor="@color/blue_200"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/product_name"
        app:layout_constraintStart_toStartOf="@id/product_name"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        tools:ignore="SmallSp"
        tools:text="@tools:sample/lorem/random" />

    <ImageView
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_delete"
        app:layout_constraintBottom_toBottomOf="@id/product_name"
        app:layout_constraintEnd_toStartOf="@id/arrow_right"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/blue_400" />

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="-1"
        android:src="@drawable/icon_arrow"
        app:layout_constraintBottom_toBottomOf="@id/product_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/blue_400" />

</androidx.constraintlayout.widget.ConstraintLayout>
